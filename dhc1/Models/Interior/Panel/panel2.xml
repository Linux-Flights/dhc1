<?xml version="1.0" encoding="ISO-8859-1"?>

<PropertyList>

  <path>panel.ac</path>

  <animation>
    <!-- Objets opaques -->
    <object-name>panel</object-name>
    <object-name>dessus</object-name>

    <!-- Objets transparents -->
  </animation>

  <animation>
    <type>select</type>
    <object-name>dessus</object-name>
    <condition>
      <less-than>
        <property>engines/engine[0]/rpm</property>
        <value>-999999</value>
      </less-than>
    </condition>
  </animation>

  <!-- ASI -->
  <model>
    <path>Instruments/asi/asi.xml</path>
    <offsets>
      <x-m>  0.119 </x-m>
      <y-m> -0.110 </y-m>
      <z-m>  0.023 </z-m>
    </offsets>
  </model>

  <!-- AI -->
  <model>
    <path>Instruments/ai/ai.xml</path>
    <offsets>
      <x-m> 0.119 </x-m>
      <y-m> 0.000 </y-m>
      <z-m> 0.040 </z-m>
    </offsets>
  </model>

  <!-- TURN -->
  <model>
    <path>Instruments/turn/turn.xml</path>
    <offsets>
      <x-m> 0.119 </x-m>
      <y-m> 0.110 </y-m>
      <z-m> 0.023 </z-m>
    </offsets>
  </model>

  <!-- ALT -->
  <model>
    <path>Instruments/alt/alt.xml</path>
    <offsets>
      <x-m>  0.119 </x-m>
      <y-m> -0.110 </y-m>
      <z-m> -0.088 </z-m>
    </offsets>
  </model>

  <!-- DG -->
  <model>
    <path>Instruments/dg/dg.xml</path>
    <offsets>
      <x-m>  0.119 </x-m>
      <y-m>  0.000 </y-m>
      <z-m> -0.077 </z-m>
    </offsets>
  </model>

  <!-- VSI -->
  <model>
    <path>Instruments/vsi/vsi.xml</path>
    <offsets>
      <x-m>  0.119 </x-m>
      <y-m>  0.110 </y-m>
      <z-m> -0.088 </z-m>
    </offsets>
  </model>

  <!-- RPM -->
  <model>
    <path>Instruments/rpm/rpm.xml</path>
    <offsets>
      <x-m>  0.122 </x-m>
      <y-m> -0.196 </y-m>
      <z-m> -0.031 </z-m>
    </offsets>
  </model>

  <!-- OIL-FUEL -->
  <model>
    <path>Instruments/oil-fuel/oil-fuel.xml</path>
    <offsets>
      <x-m>  0.119 </x-m>
      <y-m>  0.196 </y-m>
      <z-m> -0.031 </z-m>
    </offsets>
  </model>

</PropertyList>
