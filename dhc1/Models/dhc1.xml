<?xml version="1.0" encoding="ISO-8859-1"?>

<PropertyList>

  <path>dhc1.ac</path>

  <!-- MP sound call -->
  <sound>
    <path>../Sounds/mp-sound.xml</path>
  </sound>

  <nasal>
    <load>
      var livery_update = aircraft.livery_update.new("Liveries", 10);

      var self = cmdarg();

      var float_0 = self.getNode("sim/multiplay/generic/float[0]", 1);
      var float_1 = self.getNode("sim/multiplay/generic/float[1]", 1);

      var crew_door = self.getNode("sim/model/door-positions/crew/position-norm", 1);
      var passenger_door = self.getNode("sim/model/door-positions/passenger/position-norm", 1);

      crew_door.alias(float_0);
      passenger_door.alias(float_0);
    </load>

    <unload>
      livery_update.stop();
      crew_door.unalias();
      passenger_door.unalias();
    </unload>
  </nasal>

  <animation>
    <!-- Objets opaques -->
    <object-name>fuselage</object-name>
    <object-name>direction</object-name>
    <object-name>ailes</object-name>
    <object-name>aileronG</object-name>
    <object-name>aileronD</object-name>
    <object-name>voletG</object-name>
    <object-name>voletD</object-name>
    <object-name>ailes2</object-name>
    <object-name>profondeur</object-name>
    <object-name>bol</object-name>
    <object-name>helice</object-name>
    <object-name>tourverriere</object-name>
    <object-name>air</object-name>

    <object-name>roueG</object-name>
    <object-name>axeG</object-name>
    <object-name>roueD</object-name>
    <object-name>axeD</object-name>
    <object-name>roueA</object-name>
    <object-name>axes</object-name>
    <object-name>trous</object-name>

    <!-- Objets transparents -->
    <object-name>vitres</object-name>
    <object-name>verriere</object-name>
    <object-name>propdisc</object-name>
    <object-name>propblur</object-name>
  </animation>

  <animation>
    <type>material</type>
    <object-name>fuselage</object-name>
    <object-name>direction</object-name>
    <object-name>ailes</object-name>
    <object-name>aileronG</object-name>
    <object-name>aileronD</object-name>
    <object-name>voletG</object-name>
    <object-name>voletD</object-name>
    <object-name>ailes2</object-name>
    <object-name>profondeur</object-name>
    <object-name>bol</object-name>
    <object-name>helice</object-name>
    <object-name>tourverriere</object-name>
    <object-name>air</object-name>

    <object-name>roueG</object-name>
    <object-name>axeG</object-name>
    <object-name>roueD</object-name>
    <object-name>axeD</object-name>
    <object-name>roueA</object-name>
    <object-name>axes</object-name>
    <object-name>trous</object-name>

    <property-base>sim/model/livery</property-base>
    <texture-prop>texture</texture-prop>
    <texture>texture.png</texture>
    <specular>
      <red-prop>specular/red</red-prop>
      <green-prop>specular/green</green-prop>
      <blue-prop>specular/blue</blue-prop>
    </specular>
  </animation>

  <effect>
    <inherits-from>Effects/Bump/bumpspec</inherits-from>
    <object-name>fuselage</object-name>
    <object-name>direction</object-name>
    <object-name>ailes</object-name>
    <object-name>aileronG</object-name>
    <object-name>aileronD</object-name>
    <object-name>voletG</object-name>
    <object-name>voletD</object-name>
    <object-name>ailes2</object-name>
    <object-name>profondeur</object-name>
    <object-name>bol</object-name>
    <object-name>helice</object-name>
    <object-name>tourverriere</object-name>
    <object-name>air</object-name>
  </effect>

  <!-- working for Compositor -->
  <effect>
    <inherits-from>Effects/Glass/glassrain</inherits-from>
    <object-name>vitres</object-name>
    <object-name>verriere</object-name>
  </effect>

  <effect>
    <inherits-from>Effects/model-transparent</inherits-from>
    <object-name>propdisc</object-name>
    <object-name>propblur</object-name>
  </effect>

  <!-- Interieur -->
  <model>
    <path>Interior/interior.xml</path>
  </model>

  <!-- Cranking effects -->
  <!-- Left exterior -->
  <model>
    <path>Effects/cranking/cranking.xml</path>
    <offsets>
      <x-m> -2.59042 </x-m>
      <y-m>  0.17245 </y-m>
      <z-m> -0.55150 </z-m>
    </offsets>
  </model>

  <!-- Effets sur le sol -->
  <!-- Roue gauche -->
  <model>
    <path>Effects/ground/ground0.xml</path>
    <offsets>
      <x-m> -2.057 </x-m>
      <y-m> -1.331 </y-m>
      <z-m> -1.413 </z-m>
    </offsets>
  </model>

  <!-- Roue droite -->
  <model>
    <path>Effects/ground/ground1.xml</path>
    <offsets>
      <x-m> -2.057 </x-m>
      <y-m>  1.331 </y-m>
      <z-m> -1.413 </z-m>
    </offsets>
  </model>

  <!-- Roue de queue -->
  <model>
    <path>Effects/ground/ground2.xml</path>
    <offsets>
      <x-m>  3.266 </x-m>
      <y-m>  0.000 </y-m>
      <z-m> -0.617 </z-m>
    </offsets>
  </model>

  <!-- L'hélice -->
  <animation>
    <name>HeliceComplete</name>
    <object-name>propdisc</object-name>
    <object-name>propblur</object-name>
    <object-name>helice</object-name>
    <object-name>bol</object-name>
  </animation>

  <!-- Séléction de l'objet visible en fonction des rpm -->
  <animation>
    <type>select</type>
    <object-name>propdisc</object-name>
    <condition>
      <greater-than>
        <property>engines/engine[0]/rpm</property>
        <value>1500</value>
      </greater-than>
    </condition>
  </animation>

  <animation>
    <type>select</type>
    <object-name>propblur</object-name>
    <condition>
    <and>
      <greater-than>
        <property>engines/engine[0]/rpm</property>
        <value>600.000</value>
      </greater-than>
      <less-than>
        <property>engines/engine[0]/rpm</property>
        <value>1500.001</value>
      </less-than>
    </and>
    </condition>
  </animation>

  <animation>
    <type>select</type>
    <object-name>helice</object-name>
    <condition>
      <less-than>
        <property>engines/engine[0]/rpm</property>
        <value>1500</value>
      </less-than>
    </condition>
  </animation>

  <animation>
    <type>spin</type>
    <object-name>HeliceComplete</object-name>
    <property>engines/engine[0]/rpm</property>
    <factor> 1 </factor>
    <center>
      <x-m> -3.669 </x-m>
      <y-m>  0.000 </y-m>
      <z-m>  0.253 </z-m>
    </center>
    <axis>
      <x> -1 </x>
      <y>  0 </y>
      <z>  0 </z>
    </axis>
  </animation>

  <!-- Gouverne de profondeur -->
  <animation>
    <type>rotate</type>
    <object-name>profondeur</object-name>
    <property>surface-positions/elevator-pos-norm</property>
    <interpolation>
      <entry><ind> -1 </ind><dep> -38 </dep></entry>
      <entry><ind>  0 </ind><dep>   0 </dep></entry>
      <entry><ind>  1 </ind><dep>  15 </dep></entry>
    </interpolation>
    <center>
      <x-m> 3.352 </x-m>
      <y-m> 0.000 </y-m>
      <z-m> 0.081 </z-m>
    </center>
    <axis>
      <x> 0 </x>
      <y> 1 </y>
      <z> 0 </z>
    </axis>
  </animation>

  <!-- Gouverne de direction -->
  <animation>
    <type>rotate</type>
    <object-name>direction</object-name>
    <property>surface-positions/rudder-pos-norm</property>
    <interpolation>
      <entry><ind> -1 </ind><dep> -15.5 </dep></entry>
      <entry><ind>  0 </ind><dep>   0.0 </dep></entry>
      <entry><ind>  1 </ind><dep>  15.5 </dep></entry>
    </interpolation>
    <center>
      <x-m> 2.918 </x-m>
      <y-m> 0.000 </y-m>
      <z-m> 0.654 </z-m>
    </center>
    <axis>
      <x> 0 </x>
      <y> 0 </y>
      <z> 1 </z>
    </axis>
  </animation>

  <!-- Animations des ailerons -->
  <animation>
    <type>rotate</type>
    <object-name>aileronG</object-name>
    <property>surface-positions/left-aileron-pos-norm</property>
    <interpolation>
      <entry><ind> -1 </ind><dep>  21 </dep></entry>
      <entry><ind>  0 </ind><dep>   0 </dep></entry>
      <entry><ind>  1 </ind><dep> -16 </dep></entry>
    </interpolation>
    <axis>
      <x1-m> -0.702 </x1-m>
      <y1-m> -2.881 </y1-m>
      <z1-m> -0.145 </z1-m>
      <x2-m> -0.963 </x2-m>
      <y2-m> -4.938 </y2-m>
      <z2-m>  0.002 </z2-m>
    </axis>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>aileronD</object-name>
    <property>surface-positions/right-aileron-pos-norm</property>
    <interpolation>
      <entry><ind> -1 </ind><dep> -16 </dep></entry>
      <entry><ind>  0 </ind><dep>   0 </dep></entry>
      <entry><ind>  1 </ind><dep>  21 </dep></entry>
    </interpolation>
    <axis>
      <x1-m> -0.702 </x1-m>
      <y1-m>  2.881 </y1-m>
      <z1-m> -0.145 </z1-m>
      <x2-m> -0.963 </x2-m>
      <y2-m>  4.938 </y2-m>
      <z2-m>  0.002 </z2-m>
    </axis>
  </animation>

  <!-- Volets -->
  <animation>
    <type>rotate</type>
    <object-name>voletG</object-name>
    <property>surface-positions/flap-pos-norm</property>
    <factor> -30 </factor>
    <axis>
      <x1-m> -0.501 </x1-m>
      <y1-m> -0.498 </y1-m>
      <z1-m> -0.367 </z1-m>
      <x2-m> -0.744 </x2-m>
      <y2-m> -2.881 </y2-m>
      <z2-m> -0.179 </z2-m>
    </axis>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>voletD</object-name>
    <property>surface-positions/flap-pos-norm</property>
    <factor> -30 </factor>
    <axis>
      <x1-m> -0.744 </x1-m>
      <y1-m>  2.881 </y1-m>
      <z1-m> -0.179 </z1-m>
      <x2-m> -0.501 </x2-m>
      <y2-m>  0.498 </y2-m>
      <z2-m> -0.367 </z2-m>
    </axis>
  </animation>

  <!-- Compression -->
  <animation>
    <name>RoueGauche</name>
    <object-name>roueG</object-name>
    <object-name>axeG</object-name>
  </animation>

  <animation>
    <type>translate</type>
    <object-name>RoueGauche</object-name>
    <property>gear/gear[0]/compression-norm</property>
    <interpolation>
      <entry><ind> 0.0 </ind><dep>  0.04 </dep></entry>
      <entry><ind> 1.0 </ind><dep> -0.25 </dep></entry>
    </interpolation>
    <axis>
      <x> -0.071980 </x>
      <y>  0.000000 </y>
      <z> -0.221997 </z>
    </axis>
  </animation>

  <animation>
    <name>RoueDroite</name>
    <object-name>roueD</object-name>
    <object-name>axeD</object-name>
  </animation>

  <animation>
    <type>translate</type>
    <object-name>RoueDroite</object-name>
    <property>gear/gear[1]/compression-norm</property>
    <interpolation>
      <entry><ind> 0.0 </ind><dep>  0.04 </dep></entry>
      <entry><ind> 1.0 </ind><dep> -0.25 </dep></entry>
    </interpolation>
    <axis>
      <x> -0.071980 </x>
      <y>  0.000000 </y>
      <z> -0.221997 </z>
    </axis>
  </animation>

  <!-- Rotation des roues lors du roulage -->
  <animation>
    <type>spin</type>
    <object-name>roueG</object-name>
    <property>gear/gear[0]/rollspeed-ms</property>
    <factor> 30 </factor>
    <center>
      <x-m> -2.057 </x-m>
      <y-m> -1.331 </y-m>
      <z-m> -1.192 </z-m>
    </center>
    <axis>
      <x>  0 </x>
      <y> -1 </y>
      <z>  0 </z>
    </axis>
  </animation>

  <animation>
    <type>spin</type>
    <object-name>roueD</object-name>
    <property>gear/gear[1]/rollspeed-ms</property>
    <factor> 30 </factor>
    <center>
      <x-m> -2.057 </x-m>
      <y-m>  1.331 </y-m>
      <z-m> -1.192 </z-m>
    </center>
    <axis>
      <x>  0 </x>
      <y> -1 </y>
      <z>  0 </z>
    </axis>
  </animation>

  <animation>
    <type>spin</type>
    <object-name>roueA</object-name>
    <property>gear/gear[2]/rollspeed-ms</property>
    <factor> 30 </factor>
    <center>
      <x-m>  3.266 </x-m>
      <y-m>  0.000 </y-m>
      <z-m> -0.474 </z-m>
    </center>
    <axis>
      <x>  0 </x>
      <y> -1 </y>
      <z>  0 </z>
    </axis>
  </animation>

  <!-- Canopy -->
  <animation>
    <name>CanopyTotale</name>
    <object-name>verriere</object-name>
    <object-name>tourverriere</object-name>
  </animation>

  <animation>
    <type>pick</type>
    <object-name>CanopyTotale</object-name>
    <visible>true</visible>
    <action>
      <button>0</button>
      <repeatable>false</repeatable>
      <binding>
        <command>nasal</command>
        <script>doors.crew.toggle();</script>
      </binding>
    </action>
  </animation>

  <animation>
    <type>translate</type>
    <object-name>CanopyTotale</object-name>
    <property>sim/model/door-positions/crew/position-norm</property>
    <interpolation>
      <entry><ind> 0.00 </ind><dep> 0.00 </dep></entry>
      <entry><ind> 1.00 </ind><dep> 1.20 </dep></entry>
    </interpolation>
    <axis>
      <x> 1 </x>
      <y> 0 </y>
      <z> 0 </z>
    </axis>
  </animation>

  <!-- Ajout des effets lumineux -->
  <model>
    <path>light/RedLight.xml</path>
    <offsets>
      <x-m> -1.478 </x-m>
      <y-m> -5.195 </y-m>
      <z-m>  0.019 </z-m>
    </offsets>
  </model>

  <model>
    <path>light/StrobeLight.xml</path>
    <offsets>
      <x-m> -1.578 </x-m>
      <y-m> -5.200 </y-m>
      <z-m>  0.020 </z-m>
    </offsets>
  </model>

  <model>
    <path>light/GreenLight.xml</path>
    <offsets>
      <x-m> -1.478 </x-m>
      <y-m>  5.195 </y-m>
      <z-m>  0.019 </z-m>
    </offsets>
  </model>

  <model>
    <path>light/StrobeLight.xml</path>
    <offsets>
      <x-m> -1.578 </x-m>
      <y-m>  5.200 </y-m>
      <z-m>  0.020 </z-m>
    </offsets>
  </model>

</PropertyList>
